@model Electro_Tickets.Models.Actor
@using (Html.BeginForm(null, null, FormMethod.Post, new { style = "max-width: 600px; margin: 0 auto; padding: 32px;" }))
{
  <div style="display: flex; flex-direction: column; align-items: flex-start;">
    <label for="@Model.FullName" style="margin-bottom: 8px; font-weight: bold;">Full Name:</label>
    @Html.TextBoxFor(model => model.FullName, new { style = "width: 300px; height: 40px; padding: 0 12px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;" })
  </div>
  <div style="display: flex; flex-direction: column; align-items: flex-start; margin-top: 16px;">
    <label for="@Model.Bio" style="margin-bottom: 8px; font-weight: bold;">Bio:</label>
    @Html.TextAreaFor(model => model.Bio, new
    {
      style = "width: 300px; height: 200px; padding: 12px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;",
      oninput = "checkBioLength()"
    })
  </div>

  <div style="display: flex; flex-direction: column; align-items: flex-start; margin-top: 16px;">
    <label for="@Model.ProfilePictureURL" style="margin-bottom: 8px; font-weight: bold;">Profile Picture URL:</label>
    @Html.TextBoxFor(model => model.ProfilePictureURL, new { style = "width: 300px; height: 40px; padding: 0 12px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;" })
  </div>
  <div style="margin-top: 16px;">
    <input type="submit" value="Save" style="width: 100px; height: 40px; font-size: 16px; background-color: #007bff; color: #fff; border: none; border-radius: 4px;"/>
  </div>
}

